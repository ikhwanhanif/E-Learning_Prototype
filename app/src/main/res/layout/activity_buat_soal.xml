<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".BuatSoalActivity">

    <TextView
        android:id="@+id/pilihMateri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Pilih Materi untuk membuat Soal"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="50dp"
        />

    <Button
        android:id="@+id/bahasaInggrisBuatSoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_below="@id/pilihMateri"
        android:backgroundTint="@color/light_yellow"
        android:text="Bahasa Inggris"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        />
    <Button
        android:id="@+id/matematikaBuatSoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bahasaInggrisBuatSoal"
        android:text="Matematika"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/light_yellow"
        />
    <Button
        android:id="@+id/ipaBuatSoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/matematikaBuatSoal"
        android:text="IPA"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/light_yellow"
        />
    <Button
        android:id="@+id/robotikBuatSoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ipaBuatSoal"
        android:text="Robotik"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/light_yellow"
        />

</RelativeLayout>