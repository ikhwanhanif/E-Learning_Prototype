<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/light_yellow"
    tools:context=".RaportActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil Nilai"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:elevation="5dp"
        android:layout_margin="16dp"
        android:background="@android:color/background_light"
        app:cardCornerRadius="16dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="10dp"
            android:background="@android:color/background_light"
            >

            <!-- Table Header -->
            <TableRow
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@android:color/background_light"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="Mata Pelajaran"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="Nilai"
                    android:textStyle="bold"/>
            </TableRow>

            <!-- Data Rows -->
            <TableRow
                android:background="@android:color/background_light">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:text="Bahasa Inggris"/>
                <TextView
                    android:id="@+id/txtScoreEnglish"
                    android:layout_width="0dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""/>
            </TableRow>

            <TableRow
                android:background="@android:color/background_light">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:text="Matematika"/>
                <TextView
                    android:id="@+id/txtScoreMath"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:text=""/>
            </TableRow>

            <TableRow
                android:background="@android:color/background_light">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:text="IPA"/>
                <TextView
                    android:id="@+id/txtScoreIpa"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:text=""/>
            </TableRow>

            <TableRow
                android:background="@android:color/background_light">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="Robotik"/>
                <TextView
                    android:id="@+id/txtScoreRobotik"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:text=""/>
            </TableRow>
        </TableLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
